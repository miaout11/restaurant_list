<div class="row mt-3">
  <div class="col-8 col-md-6 col-lg-4 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="email" class="mb-2 mt-2 h5">Email</label>
          <input type="email" id="email" name="email" class="form-control d-block mx-auto" placeholder="Enter Email"
            required>
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2 h5">Password</label>
          <input type="password" id="password" name="password" class="form-control d-block mx-auto"
            placeholder="Enter Password" required>
        </div>
        <div class="row justify-content-center">
          <button type="submit" class="btn btn-primary col-4" style="font-size: 20px;">Login</button>
        </div>
        <div class="row justify-content-center">
          <a href="/auth/facebook" class="btn btn-info mt-3 col-4" style="font-size: 20px;">Facebook</a>
        </div>
        <div class="row justify-content-center">
          <a href="/auth/google" class="btn btn-info mt-3 col-4" style="font-size: 20px;">Google</a>
        </div>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register Here</a>
      </p>
    </div>
  </div>
</div>